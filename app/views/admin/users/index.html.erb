<p id="notice"><%= notice %></p>

<h1>Admin Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= admin_user.username %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(admin_user) if @current_user.role == 'Master' || @current_user == admin_user %></td>
        <td><%= link_to 'Delete', admin_user, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.role == 'Master' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin User', new_admin_user_path if @current_user.role == 'Master' %>
