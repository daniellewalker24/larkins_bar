          <li>
            <%= link_to (image_tag 'shared/footer/instagram-icon.svg',
                        class: 'social-media-icons',
                        alt: 'Instagram'),
                        'http://www.google.com' %>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-content-container text-center">
      <div class="footer-content-opening-hours">
        <h6 class="footer-title-text">
          Opening Hours
        </h6>

        <ul class="footer-contact">
          <li class="footer-contact-item opening-times">
            <strong class="footer-opening-times">Monday - Thursday</strong>
            11am - 11pm
          </li>
          <li class="footer-contact-item telephone">
            01482 123456
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-content-container">
      <div class="footer-content-serving-times">
        <h6 class="footer-title-text">
          Serving Times
        </h6>

        <ul class="footer-serving-times">
          <li>
            <strong>Monday - Thursday</strong>:
            12pm - 8:30pm
          </li>

          <li>
            <strong>Friday & Saturday</strong>
            12pm - 8:00pm
          </li>
        </ul>

